@model AppRedSocial.Models.PostViewModel

@{
    ViewData["Title"] = "Crear Publicación";
}

<div class="container mt-5" style="max-width: 700px;">

    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="m-0">Crear nueva publicación</h4>
        </div>

        <div class="card-body">

            <form asp-action="Create" asp-controller="Post" method="post" enctype="multipart/form-data">

                <!-- TEXTO -->
                <div class="mb-3">
                    <label asp-for="Content" class="form-label fw-bold">Escribe algo...</label>
                    <textarea asp-for="Content" class="form-control" rows="4" placeholder="¿Qué estás pensando?"></textarea>
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>

                <!-- IMAGEN -->
                <div class="mb-3">
                    <label class="form-label fw-bold">Imagen (opcional)</label>
                    <input asp-for="ImageFile" type="file" class="form-control" accept="image/*" />
                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                </div>

                <!-- BOTÓN -->
                <div class="text-end">
                    <button type="submit" class="btn btn-primary px-4">
                        Publicar
                    </button>
                </div>

            </form>

        </div>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

