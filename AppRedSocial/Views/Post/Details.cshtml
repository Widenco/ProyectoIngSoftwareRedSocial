@{
    ViewData["Title"] = "Publicación";
}

<div class="container mt-4">

    <div class="row justify-content-center">

        <div class="col-md-7">

            <!-- === Tarjeta de la publicación === -->
            <div class="card shadow-sm mb-4">
                <div class="card-body">

                    <!-- Header del usuario -->
                    <div class="d-flex align-items-center mb-3">
                        <img src="https://i.pravatar.cc/50?img=15" class="rounded-circle me-3" />
                        <div>
                            <strong>Usuario Ejemplo</strong><br />
                            <small class="text-muted">Publicado hace 3 horas</small>
                        </div>
                    </div>

                    <!-- Texto del post -->
                    <p class="mb-3">
                        Aquí va el texto completo de la publicación.
                        Puede incluir emojis 😎🔥 o varias líneas de contenido.
                    </p>

                    <!-- Imagen del post -->
                    <img src="https://picsum.photos/800/400" class="img-fluid rounded mb-3" />

                    <!-- Acciones -->
                    <div class="d-flex justify-content-around text-muted mb-3">
                        <span>👍 Me gusta</span>
                        <span>💬 Comentar</span>
                        <span>↪ Compartir</span>
                    </div>

                    <hr />

                    <!-- Sección de comentarios -->
                    <h5 class="mb-3">Comentarios</h5>

                    <!-- Comentario 1 -->
                    <div class="d-flex mb-3">
                        <img src="https://i.pravatar.cc/40?img=21" class="rounded-circle me-2" />
                        <div>
                            <strong>Carlos López</strong>
                            <p class="mb-1">Muy buen contenido, sigue así 🔥🔥</p>
                            <small class="text-muted">Hace 10 minutos</small>
                        </div>
                    </div>

                    <!-- Comentario 2 -->
                    <div class="d-flex mb-3">
                        <img src="https://i.pravatar.cc/40?img=7" class="rounded-circle me-2" />
                        <div>
                            <strong>Ana Torres</strong>
                            <p class="mb-1">Totalmente de acuerdo! 🙌</p>
                            <small class="text-muted">Hace 25 minutos</small>
                        </div>
                    </div>

                    <hr />

                    <!-- Caja para escribir comentario -->
                    <div class="d-flex">
                        <img src="https://i.pravatar.cc/45" class="rounded-circle me-2" />
                        <input type="text" class="form-control rounded-pill" placeholder="Escribe un comentario..." />
                    </div>

                </div>
            </div>
        </div>

    </div>
</div>
